  	    "@context": "http://schema.org",
  	    "@type": "NewsArticle",
  	    "headline": "Inventing the Pulp Memoir: After Visiting Friends",
  	    "alternativeHeadline": "",
  	    "url": "http://gq.com/story/inventing-the-pulp-memoir-after-visiting-friends",
  	    "image": ["http://media.gq.com/photos/558285eb1177d66d68d516cd/master/pass/blogs-the-feed-after-visiting-friends-450.jpg"],
  	    "thumbnailUrl": "http://media.gq.com/photos/558285eb1177d66d68d516cd/master/pass/blogs-the-feed-after-visiting-friends-450.jpg",
  	    "datePublished": "2013-02-27T15:32:00.000Z",
  	    "dateModified": "2015-06-18T08:48:43.819Z",
